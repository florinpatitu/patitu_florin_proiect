@page
@model patitu_florin_proiect.Pages.SarciniService.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SarcinaService[0].Descriere)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SarcinaService[0].DataProgramare)
            </th>
            <th>
                Vehicul
            </th>
            <th>
                Mecanic
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.SarcinaService)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descriere)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataProgramare)
                </td>
                <td>
                    @item.Vehicul?.NumarInmatriculare
                </td>
                <td>
                    @item.Mecanic?.Nume
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.SarcinaServiceID" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.SarcinaServiceID" class="btn btn-sm btn-info">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.SarcinaServiceID" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
